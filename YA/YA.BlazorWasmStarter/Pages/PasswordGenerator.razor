@page "/pw-generator"

<div class="container mt-4">
    <div class="card password-generator">
        <div class="card-body">
            <div class="password-display mb-3">
                <h2 class="password mb-0">U^5\!EKL>?1RuI83{CT9XyfM?c|5s`h</h2>
                <div class="icons">
                    <i class="bi bi-clipboard"></i>
                    <i class="bi bi-arrow-clockwise"></i>
                </div>
            </div>
            <h5 class="card-title">Customize your password</h5>
            <div class="mb-3">
                <label for="passwordLength" class="form-label">Password Length</label>
                <div class="d-flex align-items-center">
                    <input type="number" class="form-control me-2" id="passwordLength" value="31" style="width: 70px;">
                    <input type="range" class="form-range flex-grow-1" min="8" max="50" value="31">
                </div>
            </div>
            <div class="mb-3">
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="passwordType" id="easyToSay">
                    <label class="form-check-label" for="easyToSay">
                        Easy to say <i class="bi bi-info-circle"></i>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="passwordType" id="easyToRead">
                    <label class="form-check-label" for="easyToRead">
                        Easy to read <i class="bi bi-info-circle"></i>
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="passwordType" id="allCharacters" checked>
                    <label class="form-check-label" for="allCharacters">
                        All characters <i class="bi bi-info-circle"></i>
                    </label>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="uppercase" checked>
                        <label class="form-check-label" for="uppercase">Uppercase</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="lowercase" checked>
                        <label class="form-check-label" for="lowercase">Lowercase</label>
                    </div>
                </div>
                <div class="col">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="numbers" checked>
                        <label class="form-check-label" for="numbers">Numbers</label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="symbols" checked>
                        <label class="form-check-label" for="symbols">Symbols</label>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .password-generator {
        max-width: 500px;
        margin: auto;
        box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
    }

    .password-display {
        position: relative;
        background-color: #f8f9fa;
        padding: 1rem;
        border-radius: 0.25rem;
    }

    .password {
        font-size: 1.2rem;
        word-break: break-all;
    }

    .icons {
        position: absolute;
        top: 0.5rem;
        right: 0.5rem;
    }

        .icons i {
            margin-left: 0.5rem;
            cursor: pointer;
        }

    .form-range::-webkit-slider-thumb {
        background-color: #dc3545;
    }

    .form-range::-moz-range-thumb {
        background-color: #dc3545;
    }

    .form-range::-ms-thumb {
        background-color: #dc3545;
    }
</style>