@using System.Text
@using BlazorDownloadFile
@inject IBlazorDownloadFileService DownloadFileService


<div class="card bg-base-100 shadow-xl mb-4">
    <div class="card-body">
        <h3 class="card-title">@Language</h3>
        <p>@Text</p>
        <button @onclick="HandleDownloadSrtClick">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6 mr-2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M3 16.5v2.25A2.25 2.25 0 005.25 21h13.5A2.25 2.25 0 0021 18.75V16.5M16.5 12L12 16.5m0 0L7.5 12m4.5 4.5V3" />
            </svg>
            Download .srt
        </button>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public required string Language { get; set; }

    [Parameter, EditorRequired]
    public required string Text { get; set; }

    private async Task HandleDownloadSrtClick()
    {
        var textBytes = Encoding.UTF8.GetBytes(Text);

        var memoryStream = new MemoryStream();

        await memoryStream.WriteAsync(textBytes, 0, textBytes.Length);
        
        await DownloadFileService.DownloadFile($"{Language}.srt", memoryStream, "text/plain");
    }
}
