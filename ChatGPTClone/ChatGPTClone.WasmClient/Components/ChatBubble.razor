@using ChatGPTClone.Domain.ValueObjects

@if (ChatMessage.Type == Domain.Enums.ChatMessageType.Assistant)
{
    <!-- Bot message -->
    <div class="flex justify-start">
        <div class="flex items-start space-x-2">
            <div class="w-10 h-10 rounded-full bg-gray-300 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-600" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
            </div>
            <div
                class="bg-white text-gray-800 rounded-lg p-3 max-w-xs sm:max-w-md md:max-w-lg lg:max-w-xl xl:max-w-2xl shadow">
                <p class="text-sm">@ChatMessage.Content</p>
                <div class="mt-2">
                    <span
                        class="inline-block bg-gray-200 rounded-full px-3 py-1 text-xs font-semibold text-gray-700">@ChatMessage.Model.ToString()</span>
                </div>
            </div>
        </div>
    </div>
}
else if (ChatMessage.Type == Domain.Enums.ChatMessageType.User)
{
    <!-- User message -->
    <div class="flex justify-end">
        <div class="flex items-start space-x-2 flex-row-reverse">
            <div class="w-10 h-10 rounded-full bg-blue-500 flex items-center justify-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-white" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                        d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
            <div
                class="bg-blue-500 text-white rounded-lg p-3 max-w-xs sm:max-w-md md:max-w-lg lg:max-w-xl xl:max-w-2xl shadow">
                <p class="text-sm">@ChatMessage.Content</p>
                <div class="mt-2">
                    <span
                        class="inline-block bg-blue-400 rounded-full px-3 py-1 text-xs font-semibold text-white">@ChatMessage.Model.ToString()</span>
                </div>
            </div>
        </div>
    </div>
}





@code {
    [Parameter]
    public ChatMessage ChatMessage { get; set; }
}
