@using ChatGPTClone.Domain.ValueObjects
<div class="container mx-auto p-4">
    <div class="flex flex-col space-y-4">
        @foreach (var chatThread in ChatThreads)
        {
            @foreach (var chatMessage in chatThread.Messages)
            {
                <ChatBubble ChatMessage="chatMessage" />
            }
        }
    </div>
</div>

@code {
    [Parameter]
    public List<ChatThread> ChatThreads { get; set; }
}
